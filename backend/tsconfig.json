{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020", // Node 14+ đủ hiện đại, có top-level await
    "module": "NodeNext", // ESM Node.js
    "moduleResolution": "NodeNext", // resolve theo ESM Node
    "esModuleInterop": true, // import default CommonJS module dễ
    "allowSyntheticDefaultImports": true, // import x from 'cjs-module' OK
    "resolveJsonModule": true, // import json trực tiếp
    "forceConsistentCasingInFileNames": true, // tránh lỗi case-sensitive
    "strict": true, // bật toàn bộ strict type-check
    "skipLibCheck": true, // bỏ check types của node_modules
    "removeComments": true, // bỏ comment khi build
    "sourceMap": true, // build có sourcemap debug dễ
    "outDir": "build", // folder output build
    "baseUrl": ".", // base cho paths
    "paths": {
      "@src/*": [
        "apps/sources/src/*"
      ],
      "@libs/*": [
        "apps/libs/*"
      ],
      "@app/*": [
        "apps/*"
      ]
    },
    /* JavaScript support */
    "allowJs": true,
    /* Emit & Declaration */
    "noEmitOnError": true, // lỗi type không build
  },
  "ts-node": {
    "esm": true,
    "compiler": "typescript"
  },
  // "include": [
  //   ".",
  // ],
  "include": [
    ".",
    "src/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "./build",
    "node_modules"
  ]
}